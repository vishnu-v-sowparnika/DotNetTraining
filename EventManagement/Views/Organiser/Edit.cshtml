@model EventManagement.DTO.OrganiserEditDTO

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <title>Member Details Edi</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    @section Styles{
        <link rel="stylesheet" href="~/css/signupstyle.css" />
    }
</head>
<body>
    <div class="testbox">
        <form asp-action="Edit" asp-controller="Organiser" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="banner">
                <h1> Member Details Edit</h1>
            </div>
            <div class="colums">
                <div class="item">
                    <label asp-for="FName"> First Name<span>*</span></label>
                    <input asp-for="FName" id="fname" type="text" name="FName" required />
                </div>
                <div class="item">
                    <label asp-for="LName"> Last Name<span>*</span></label>
                    <input asp-for="LName" id="lname" type="text" name="LName" required />
                </div>
                <div class="item">
                    <label asp-for="Address1">Address 1<span>*</span></label>
                    <input asp-for="Address1" id="address1" type="text" required />
                </div>
                <div class="item">
                    <label asp-for="Address2">Address 2<span>*</span></label>
                    <input asp-for="Address2" id="address2" type="text" required />
                </div>
                <div class="item">
                    <label asp-for="State">State<span>*</span></label>
                    <input asp-for="State" id="state" type="text" required />
                </div>
                <div class="item">
                    <label asp-for="POBOX" for="zip">Zip/Postal Code<span>*</span></label>
                    <input asp-for="POBOX" id="zip" type="text" required />
                </div>
                <div class="item">
                    <label asp-for="City" for="city">City<span>*</span></label>
                    <input asp-for="City" id="city" type="text" required />
                </div>
                <div class="item">
                    <label asp-for="Email" for="eaddress">Email Address<span>*</span></label>
                    <input asp-for="Email" id="eaddress" type="text" name="Email" required />
                </div>
                <div class="item">
                    <label asp-for="Password">Phone<span>*</span></label>
                    <input asp-for="Password" id="phone" type="tel" required />
                </div>
            </div>
            <div class="question">
                <label>Membership Type</label>
                <div class="question-answer">
                    <div>
                        <input type="radio" value="none" id="radio_1" name="type" />
                        <label for="radio_1" class="radio"><span>Standard</span></label>
                    </div>
                    <div>
                        <input type="radio" value="none" id="radio_2" name="type" />
                        <label for="radio_2" class="radio"><span>Premium</span></label>
                    </div>
                    <div>
                        <input type="radio" value="none" id="radio_3" name="type" />
                        <label for="radio_3" class="radio"><span>Ultimate</span></label>
                    </div>
                </div>
            </div>
            <div class="question">
                <label>Preferred way to contact </label>
                <div class="question-answer">
                    <div>
                        <input type="radio" value="none" id="radio_4" name="contact" />
                        <label for="radio_4" class="radio"><span>Phone</span></label>
                    </div>
                    <div>
                        <input type="radio" value="none" id="radio_5" name="contact" />
                        <label for="radio_5" class="radio"><span>Email</span></label>
                    </div>
                    <div>
                        <input type="radio" value="none" id="radio_6" name="contact" />
                        <label for="radio_6" class="radio"><span>Any</span></label>
                    </div>
                </div>
            </div>
            <h2>Terms and Conditions</h2>
            <input type="checkbox" name="checkbox1">
            <label>You consent to receive communications from us electronically. We will communicate with you by e-mail or phone. You agree that all agreements, notices, disclosures and other communications that we provide to you electronically satisfy any legal requirement that such communications be in writing.</label>
            <div class="btn-block">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>
